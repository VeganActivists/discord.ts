{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    "group:definitelyTyped",
    "group:linters"
  ],
  "labels": [
    "renovate"
  ],
  "schedule": [
    "before 12pm on Sunday"
  ],
  "npm": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      },
      {
        "matchPackagePatterns": [
          "ansi-regex"
        ],
        "allowedVersions": "^5"
      },
      {
        "matchPackagePatterns": [
          "@types/node-fetch"
        ],
        "allowedVersions": "^2"
      },
      {
        "matchPackagePatterns": [
          "@sapphire"
        ],
        "groupName": "Sapphire Dependencies"
      },
      {
        "matchDepTypes": [
          "engines"
        ],
        "enabled": false
      }
    ]
  }
}
